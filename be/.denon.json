{
    "files": [
        "main.ts"
    ],
    "quiet": false,
    "debug": true,
    "fullscreen": true,
    "extensions": [
        ".js",
        ".ts",
        ".py",
        ".json"
    ],
    "interval": 2000,
    "watch": [
        "/"
    ],
    "deno_args":[
        "--allow-net",
        "--allow-read",
        "--unstable",
        "--allow-write",
        "--allow-plugin"
    ],
    "execute": {
        ".js": ["deno", "run"],
        ".ts": ["deno", "run"],
        ".py": ["python"]
    },
    "fmt": true,
    "test": true
}